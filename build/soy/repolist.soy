{namespace org.koshinuke.template.repolist}

/**
 * @param list repository names
 */
{template .tmpl}
	{foreach $e in $list}
		<div class="repository {if isFirst($e)}top{elseif isLast($e)}bottom{/if}">
			<div class="repo-name">{$e}</div>
			<ul class="repo-context">
				<li context="b">Branch</li>
				<li context="t">Tags</li>
				<li context="h">Histories</li>
				<li context="g">Graph</li>
			</ul>
		</div>
	{/foreach}
{/template}