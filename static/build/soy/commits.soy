{namespace org.koshinuke.template.commits}

/**
 * @param author
 * @param message
 * @param timestamp
 */
{template .tmpl}
<div class="commit">
	<div class="author">
		<img class="thumb large {$author}"/>
	</div>
	<div class="metadata">
		<div class="message">{$message}</div>
		<div class="commitdata">
			<span class="name">{$author}</span>authored
			<span class="timestamp">{$timestamp}</span>
		</div>
	</div>
</div>
{/template}
