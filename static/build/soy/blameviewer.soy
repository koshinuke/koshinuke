{namespace org.koshinuke.template.blameviewer}

/**
 * @param author
 * @param timestamp
 * @param message
 */
{template .tmpl}
<span class="commitdata">
	<span class="author"><img class="small {$author}"/>{$author}</span>authored 
	<span class="calendar">{$timestamp}</span>
</span>
<div class="message">{$message}</div>
{/template}

/**
 * @param style
 * @param token
 */
{template .token}
{if $style}
	<span class="cm-{$style}">{$token}</span>
{else}
	{$token}
{/if}
{/template}
